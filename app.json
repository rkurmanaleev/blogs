{
  "name": "Blog FS",
  "scripts": {
    "postdeploy": "bundle exec rake db:schema:load && bundle exec rake db:seed"
  },
  "env": {
    "HOST": { "required": true },
    "LANG": { "required": true },
    "MAILER_SENDER_ADDRESS": { "required": true },
    "RACK_ENV": { "required": true },
    "RAILS_ENV": { "required": true },
    "RAILS_SERVE_STATIC_FILES": { "required": true },
    "SECRET_KEY_BASE": { "generator": "secret" }
  },
  "buildpacks": [
    { "url": "heroku/nodejs" },
    { "url": "heroku/ruby" }
  ],
  "addons": [
    "heroku-postgresql",
    "sendgrid",
    "rollbar"
  ]
}
